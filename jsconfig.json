{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"],
      "~~/*": ["./*"],
      "@@/*": [
        "./*"
      ]
    },
    "types": [
      "@nuxt/types",
      "@nuxt/content",
      "@nuxt/device"
    ]
  },
  "exclude": [
    "node_modules",
    ".nuxt",
    "dist"
  ],
}
